{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2015",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "*": ["../typings/*"]
    },
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "strictNullChecks": false
  },
  "exclude": ["dist"]
}
